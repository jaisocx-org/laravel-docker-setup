{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  // config: "XDebug laravel app under docker" is for debugging with jaisocx-http under docker in this setup.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "XDebug laravel app under docker",
      "type": "php",
      "request": "launch",
      "port": 9008,
      "pathMappings": {
          "/var/www/laravel": "${workspaceFolder}/laravel"
      },
      "log": true
    },
    {
      "name": "Debug current script in console",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "externalConsole": false,
      "port": 9007
    }
  ]
}